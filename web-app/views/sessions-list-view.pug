doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        link(rel='stylesheet' href='/style.css')
        link(rel='icon' type='image/x-icon' href='/favicon.ico')
        title PeAR - sessions

    body
        include header

        #report.centered
            h1 Sessions
            table
                tr
                    th ID
                    th Game - Build - Level
                    th Date
                    th Status
                each session in sessions
                    tr
                        td: a(href='/sessions/' + session._id) #{session._id}
                        td #{session.game} - #{session.build} - #{session.scene}
                        td #{session.startDate}
                        td(style='text-align: center')
                            if session.status
                                span#validated.status validated
                            else
                                span#failed.status failed

        include footer
